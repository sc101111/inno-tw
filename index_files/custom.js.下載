// Check for GET parameters (used for country)
function parse(val) {
    var result = "Not found",
        tmp = [];
    location.search
    .substr(1)
        .split("&")
        .forEach(function (item) {
        tmp = item.split("=");
        if (tmp[0] === val) result = decodeURIComponent(tmp[1]);
    });
    return result;
}

function ajaxload(select_val){
	if(select_val == '1'){
		select_val = '2,9,10,11,12';
	}

    if(select_val == '11'){
		select_val = '11,12';
	}

	var selected_prod = $('#filterform_products').children('select').val();
	var total_nb_prod = 0;
    if (parse("country") == "es") {
        alert("es");
    }

	if($("#only_new").is(':checked')){
		var newbrands = '1';
	} else {
		var newbrands = '0,1';
	}

	if((select_val == '4')&&(selected_prod != '0')){
		var data = {
			univers: select_val,
			tradeshows: "4",
			new: newbrands,
			first_activity: selected_prod
		}
	}else{
		var data = {
			univers: select_val,
			tradeshows: "4",
			new: newbrands
		}
	}

	$.ajax( {
		type: "GET",
		url: "http://5d.whosnext.com/generate_json.php",
		data: data,
		dataType: "jsonp",
		jsonpCallback: "callback",
		crossDomain : true,
		contentType: "application/json;charset=utf-8",
		beforeSend: function () {
			$("#wait").css("display", "block");
			$('#left_side').empty();
			$('#right_side').empty();
			$('#filterform_products select').empty();
		},
		success: function(data)
		{
			var test_data = unescape(data);
			var current_nb = 0;
			var total_nb = Object.keys(data).length;
			var products_list = ['None', 'Vêtements/Clothes', 'Femme/Woman', 'Homme/Man', 'Enfant/Child', 'Cuir, peaux, fourrure/Leather and fur', 'Maille/Knitwear', 'Bijoux/Jewels', 'Chaussures/Shoes', 'Sacs/Bags', 'Chapeaux/Hats', 'Foulards/Scarves', 'Gants/Gloves', 'Maroquinerie/Leather goods', 'Bagagerie/Luggage', ' Scolaire/School Bags', 'Accessoires Multiples/Multiple Accessories', 'Accessoires/Accessories', 'Manteaux/Coats', 'Lingerie/Underwear', 'Petite Maroquinerie/Small Leathergoods', 'Ceintures/Belts', 'Chaussettes/Socks', 'Boutons de manchettes/Cufflinks', 'Parapluies/Umbrellas', 'Cravates/Ties', 'Lunettes/Glasses', 'Accessoires de Tête/Hair Accessories', 'Produit d\'entretien du cuir/Leather care pr', 'Objets de la maison/Home accessories', 'Objet/Design', 'Casques/Helmets'];
			var prod_list = [];

			$.each(data, function(index, element) {
				if(element.first_activity!=""){
					prod_list.push(element.first_activity);
				};

				current_nb++;
				var id = element.id;
				var title = element.name;
				var hall = element.hall;
				var stand = element.stand;
				var theid = element.id;

				if(current_nb > Math.round((total_nb/2))){
					side = '#right_side';
				}else {
					side = '#left_side';
				}

				var new_item = '';
				if(element.new > 0){
					new_item = '*';
				}

				if(element.website){
					if(element.website.substring(0,7) == 'http://'){
						var website = element.website.substring(7);
					} else {
						var website = element.website;
					}
					var item_content = '<a href="http://' + website + '" title="' + title + '" target="_blank">' + title + new_item + '</a>';
				} else {
					var item_content = title + new_item;
				}

				if(element.hall || element.stand){
					item_content = item_content + '<p class="small hallstand">';
					if(element.hall){
						item_content = item_content + 'Hall ' + hall;
					}
					if(element.hall && element.stand){
						item_content = item_content + ' - ';
					}
					if(element.stand){
						item_content = item_content + 'Stand ' + stand;
					}
					item_content = item_content + '</p>';
				}

				$('<div class="branditem"></div>').html(item_content).appendTo(side);
			});

			var drop_products = prod_list.filter(function(itm,i,prod_list){
				return i==prod_list.indexOf(itm);
			});
			drop_products.sort(function(a, b){return a-b});

			$('#filterform_products select').append($('<option>', {
		        value: 0,
		        text : 'All products/Tous les produits'
		    }));
			drop_products.forEach(function(id){
				$('#filterform_products select').append($('<option>', {
			        value: id,
			        text : products_list[id]
			    }));
			});

			$("#wait").css("display", "none");
		}
	});
}
